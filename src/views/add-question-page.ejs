<h1>All Questions of <%= section.title %></h1>
<table>
  <% section?.Questions?.forEach(question => { %>
  <tr>
    <td>
      <a href="/add/answer/<%= question.id %>"><%= question.question %></a>
    </td>
  </tr>
  <% }) %>
</table>

<h2>Add New Question</h2>
<form action="/form/sections/<%= section.id%>/questions" method="post">
  <label for="questionContent">Question Content:</label>
  <input type="text" id="questionContent" name="questionContent" required />
  <label for="type">Question Type:</label>
  <select type="text" id="type" name="type" required>
    <option value="MCQ">MCQ</option>
    <option value="MSQ">MSQ</option>
  </select>
  <br><br>
  <label style="padding-left: 20px;" for="email">Admin Email:</label>
  <input type="email" id="email" name="email" required />
  <button type="submit">Create Question</button>
</form>
