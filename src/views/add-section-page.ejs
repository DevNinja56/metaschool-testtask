<h1>All Sections of <%= assessment?.title %></h1>

<table>
  <% assessment?.Sections?.forEach(section => { %>
  <tr>
    <td><a href="/add/question/<%= section.id %>"><%= section.title %></a></td>
  </tr>
  <% }) %>
</table>

<h2>Add New Section</h2>
<form action="/form/assessments/<%= assessment?.id%>/sections" method="post">
  <label for="title">Section Title:</label>
  <input type="text" id="title" name="title" required />
  <br><br>
  <label style="padding-left: 0px;" for="email">Admin Email:</label>
  <input type="email" id="email" name="email" required />
  <button type="submit">Create Section</button>
</form>
